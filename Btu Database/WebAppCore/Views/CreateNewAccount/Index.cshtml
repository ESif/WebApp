@model WebAppCore.Models.User

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="wrap">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form method="post" accept-charset="utf-8" class="form" role="form">
                    <legend>Registration For New User</legend>
                    <h5>This grants a new user access to the Honeywell Bench Test Utilities.</h5>
                    <br />
                    <div class="row">
                        @*<label asp-for="UserId" class="control-label"></label>
                        <input asp-for="UserId" class="form-control" />*@
                        <div class="col-xs-6 col-md-6">
                            <input asp-for="FirstName" type="text" name="firstname" value="" class="form-control input-lg" placeholder="First Name" />
                        </div>
                        <div class="col-xs-6 col-md-6">
                            <input asp-for="LastName" type="text" name="lastname" value="" class="form-control input-lg" placeholder="Last Name" />
                        </div>
                    </div>
                    <input asp-for="Email" type="text" name="email" value="" class="form-control input-lg" placeholder="Email" />
                    <input asp-for="Password" type="password" name="password" value="" class="form-control input-lg" placeholder="Password" />
                    <input type="password" name="confirm_password" value="" class="form-control input-lg" placeholder="Confirm Password" />
                    <input asp-for="Privilege" type="text" name="privilege" value="" class="form-control input-lg" placeholder="Privilege" />
                    @*<div class="checkbox">
            <label><input asp-for="Privilege" type="checkbox" value="">Add Administrative Rights</label>
